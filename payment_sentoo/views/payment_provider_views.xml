<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payment_provider_form" model="ir.ui.view">
        <field name="name">Sentoo Provider Form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <group name="provider_credentials" position='inside'>
                <group attrs="{'invisible': [('code', '!=', 'sentoo')]}">
                    <field name="sentoo_merchant"
                           string="Merchant Identifier"
                           attrs="{'required': [('code', '=', 'sentoo'), ('state', '!=', 'disabled')]}"/>
                    <field name="sentoo_secret"
                           string="Merchant Secret"
                           attrs="{'required': [('code', '=', 'sentoo'), ('state', '!=', 'disabled')]}"/>

                </group>
            </group>
        </field>
    </record>

</odoo>
