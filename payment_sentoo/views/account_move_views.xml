<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_move_form_sentoo" model="ir.ui.view">
        <field name="name">Invoice Sentoo form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_register_payment']" position="after">
                <button name="create_sentoo_transaction" type="object"
                        string="Create sentoo payment" class="oe_highlight"
                        attrs="{'invisible': ['|', '|', '|', ('state', '!=', 'posted'), ('payment_state', 'in', ('paid', 'partial')), ('move_type', '!=', 'out_invoice'), ('sentoo_transaction_reference', '!=', False)]}"
                        />
            </xpath>
            <xpath expr="//field[@name='to_check']" position="after">
                <field name="sentoo_transaction_reference"/>
                <field name="sentoo_payment_url"/>
                <field name="sentoo_payment_id"/>
            </xpath>
        </field>
    </record>

</odoo>
